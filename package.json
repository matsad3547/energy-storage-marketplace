{
  "name": "energy-storage-marketplace",
  "version": "0.0.1",
  "description": "marketplace platform",
  "main": "client/src/index.js",
  "repository": "https://github.com/matsad3547/energy-storage-marketplace",
  "author": "matsad",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "dotenv": "^4.0.0",
    "isomorphic-fetch": "^2.2.1",
    "moment-timezone": "^0.5.21",
    "mv": "^2.1.1",
    "prop-types": "^15.6.2",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^3.5.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "jest-css-modules-transform": "^2.0.2",
    "jest-svg-transformer": "^1.0.0",
    "nodemon": "^1.12.1"
  },
  "scripts": {
    "start-dev": "concurrently \"yarn run server-dev\" \"yarn run client-dev\"",
    "server-dev": "NODE_ENV=development nodemon server/index.js",
    "client-dev": "node ./server/scripts/start-client.js",
    "test": "NODE_ENV=test jest --watch",
    "run-prod": "yarn run client-build && concurrently \"yarn run server-prod\" \"cd ~/Applications && ./ngrok http 5150\"",
    "server-prod": "NODE_ENV=production PORT=5150 node server/index.js",
    "client-build": "node ./server/scripts/build-client.js"
  },
  "jest": {
    "moduleNameMapper": null,
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.svg$": "jest-svg-transformer",
      ".+\\.(css|styl|less|sass|scss)$": "<rootDir>/node_modules/jest-css-modules-transform"
    }
  }
}
